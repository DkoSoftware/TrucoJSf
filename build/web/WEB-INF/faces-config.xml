<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <navigation-rule>  
    <from-view-id>/faces/index.xhtml</from-view-id>  
        <navigation-case>  
            <from-outcome>Game</from-outcome>  
            <to-view-id>/faces/index.xhtml</to-view-id>  
        </navigation-case>  
    </navigation-rule>  
       <!--
    configuração dos arquivos de idiomas
    -->
    <application>
        <locale-config>
            <default-locale>pt_BR</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>TrucoJsf.Properties.Message</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <!--
    fim configuração dos arquivos de idiomas
    -->
</faces-config>
